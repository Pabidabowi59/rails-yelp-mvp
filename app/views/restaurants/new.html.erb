<h1>New restaurant</h1>
<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.label :category %>
  <%= f.select :category, options_for_select(["chinese", "italian", "japanese", "french", "belgian"]) %>
  <%= f.input :phone_number %>
  <%= f.submit "Create restaurant!", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Back to list', restaurants_path %>
